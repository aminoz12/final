<div id="liveChatWidget" class="fixed bottom-4 right-4 z-50">
  <!-- Chat Toggle Button -->
  <button id="chatToggleBtn" class="bg-blue-600 hover:bg-blue-700 text-white rounded-full p-4 shadow-lg transition-all duration-300 hover:scale-110">
